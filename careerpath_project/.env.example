# .env.example
# Copy this file to .env and fill in your credentials.

# --- Application Secret ---
SECRET_KEY="your_super_secret_key_for_jwt"

# --- Database Configuration ---
# Option 1: Use a single DATABASE_URL (recommended for deployed environments)
DATABASE_URL="postgresql://user:password@host:port/dbname"

# Option 2: Use individual variables (useful for local development)
# DB_USER="your_db_user"
# DB_PASSWORD="your_db_password"
# DB_HOST="localhost"
# DB_PORT="5432"
# DB_NAME="your_db_name"

# --- External Services ---
GEMINI_API_KEY="your_google_gemini_api_key"
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"
BREVO_API_KEY="your_brevo_api_key"
SENDER_EMAIL="your_sending_email@example.com"
FRONTEND_URL="http://127.0.0.1:5500"

# --- Google Drive API ---
GOOGLE_CLIENT_SECRET_FILE="client_secret.json" # The name of your Google OAuth client secret file
GOOGLE_DRIVE_FOLDER_ID="your_google_drive_folder_id"
GOOGLE_REFRESH_TOKEN="your_google_drive_refresh_token" # Get this from get_refresh_token.py
